
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Cultivar images directly added by admin
    match /cultivar-images/{imageId} {
      allow read: if true; // Publicly readable
      allow write: if request.auth != null; // Only authenticated users (admins) can write
    }

    // Additional cultivar images directly added by admin (e.g., plantPicture, etc.)
    match /cultivar-images/additional/{imageId} {
      allow read: if true; // Publicly readable
      allow write: if request.auth != null; // Only authenticated users (admins) can write
    }

    // Cultivar documents (certificates, info sheets) directly added by admin
    match /cultivar-docs/{category}/{docId} {
      allow read: if true; // Publicly readable (adjust if some docs should be private)
      allow write: if request.auth != null; // Only authenticated users (admins) can write
    }

    // User submitted images (go to a specific path for review)
    match /cultivar-images/user-submitted/{submissionImageId} {
      // Allow anyone to write (submit an image) with size and type validation
      allow write: if request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                      request.resource.contentType.matches('image/.*'); // Only images

      // Only authenticated users (admins) can read or delete these submitted images
      allow read, delete: if request.auth != null;
    }

    // Default deny all other paths for security
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

    