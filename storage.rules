rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow all reads and writes to all files for development purposes.
    // IMPORTANT: For production, you MUST replace this with proper security rules
    // that enforce authentication and authorization (e.g., allow write: if request.auth != null;).
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
