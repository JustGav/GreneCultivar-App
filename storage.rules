rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow public read access to all files by default.
    // This is common for images and public documents once uploaded.
    match /{allPaths=**} {
      allow read: if true;
    }

    // --- Cultivar Images ---
    // Allow writes only by authenticated users (TODO: implement auth check)
    // Validate file type and size.
    match /cultivar-images/{imageId} {
      allow write: if 
        // TODO: request.auth != null &&
        request.resource.size < 5 * 1024 * 1024 && // Max 5MB
        request.resource.contentType.matches('image/.*');
    }
    match /cultivar-images/additional/{imageId} {
      allow write: if 
        // TODO: request.auth != null &&
        request.resource.size < 5 * 1024 * 1024 && // Max 5MB
        request.resource.contentType.matches('image/.*');
    }

    // --- Cultivar Documents (PDFs) ---
    match /cultivar-docs/certificates/{docId} {
      allow write: if
        // TODO: request.auth != null &&
        request.resource.size < 5 * 1024 * 1024 && // Max 5MB
        request.resource.contentType == 'application/pdf';
    }
    match /cultivar-docs/cannabinoid-info/{docId} {
      allow write: if
        // TODO: request.auth != null &&
        request.resource.size < 5 * 1024 * 1024 && // Max 5MB
        request.resource.contentType == 'application/pdf';
    }
    match /cultivar-docs/terpene-info/{docId} {
      allow write: if
        // TODO: request.auth != null &&
        request.resource.size < 5 * 1024 * 1024 && // Max 5MB
        request.resource.contentType == 'application/pdf';
    }

    // Deny writes to any other paths by default if not matched above.
    // This is implicit if no other 'allow write' rule matches.
  }
}
